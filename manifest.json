{
  "name": "Cyberbullying Detection",
  "version": "0.0.1",
  "description": "Find offensive user and offensive comments in your social media like Facebook and Instagram",
  "manifest_version": 2,
  "icons" : {
    "128" : "icon128.png",
    "48" : "icon48.png",
    "16" : "icon16.png"
  },
  "page_action": {
    "default_popup": "demo.html",
    "default_icon": "icon16.png",
    "default_title": "CyberbullyingDetection"
  },

  "options_page" : "options.html",

  "background" : {
    "scripts" : ["eventPage.js"],
    "persistent" : false
  },

  "content_scripts" : [
    {
      "matches" : ["https://www.instagram.com/*"],
      "js" : ["content.js", "jquery-3.6.0.min.js"],
      "css": ["content.css"]
    }
  ],

  "permissions" : [
    "storage",
    "tabs",
    "https://www.instagram.com/*"
  ]
}
